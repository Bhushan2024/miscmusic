@model Demo.Models.UserBookingViewModel

@{
    ViewData["Title"] = "Book Event";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #ff6f61;">Book Event: @Model.EventName</h2>

    <!-- Event Details Box -->
    <div class="card shadow-sm mb-4 rounded-3 border-0">
        <div class="card-body">
            <h5 class="card-title" style="color: #333; font-weight: bold;">@Model.EventName</h5>
            <p class="card-text" style="color: #555;">@Model.EventDescription</p>
            <p><strong>Location:</strong> @Model.EventLocation</p>
            <p><strong>Date:</strong> @Model.EventDate.ToLongDateString() at @Model.EventTime</p>
            <p><strong>Seats Available:</strong> <span class="badge bg-success">@Model.TotalSeats - @Model.BookedSeats</span></p>
        </div>
    </div>

    <!-- Booking Form -->
    <h3 class="mb-3" style="color: #ff6f61;">Book Your Ticket</h3>
    <form method="post" class="shadow-sm p-4 rounded-3 bg-white border-0">
        <div class="mb-3">
            <label class="form-label" style="font-weight: bold;">Seats to Book</label>
            <input type="number" asp-for="SeatsBooked" class="form-control rounded-2" min="1" max="@Model.TotalSeats - @Model.BookedSeats" required />
        </div>

        <button type="submit" class="btn btn-primary px-5" style="background-color: #ff6f61; border: none;">
            Book Now
        </button>
    </form>
</div>

<!-- Custom Styles -->
<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .btn-primary:hover {
        background-color: #e85c50;
    }

    h2, h3 {
        font-weight: 700;
    }

    .form-control {
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(255, 111, 97, 0.5);
        border-color: #ff6f61;
    }
</style>
