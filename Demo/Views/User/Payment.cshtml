@model Demo.Models.PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-5">
    <h2 class="text-center">Payment</h2>

    <!-- Payment Breakdown -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Booking Details</h5>
            <p><strong>Seats Booked:</strong> @Model.SeatsBooked</p>
            <p><strong>Ticket Price:</strong> @Model.TicketPrice</p>
            <p><strong>GST (18%):</strong> @Model.GstAmount</p>
            <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
        </div>
    </div>

    <!-- Payment Form -->
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Card Number</label>
            <input type="text" class="form-control" asp-for="CardNumber" required />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Card Holder Name</label>
            <input type="text" class="form-control" asp-for="CardHolderName" required />
            <span asp-validation-for="CardHolderName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Expiry Date</label>
            <input type="month" class="form-control" asp-for="ExpiryDate" required />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">CVV</label>
            <input type="text" class="form-control" asp-for="CVV" required />
            <span asp-validation-for="CVV" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Confirm Payment</button>
    </form>
</div>

@section Scripts {
    @* Ensure client-side validation is enabled *@
    <script src="~/lib/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery.validate.min.js"></script>
    <script src="~/lib/jquery.validate.unobtrusive.min.js"></script>
}
