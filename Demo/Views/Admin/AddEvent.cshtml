@model Demo.Models.EventViewModel

@{
    ViewData["Title"] = "Add New Event";
}

<div class="container mt-4">
    <h2 class="text-center mb-4" style="color: #ff6f61;">Add New Event</h2>

    <form asp-action="AddEvent" asp-controller="Admin" method="post" class="shadow p-4 rounded bg-white custom-form">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Event Name</label>
                    <input type="text" asp-for="EventName" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="EventName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="EventDescription" class="form-control custom-input"></textarea>
                    <span class="text-danger" asp-validation-for="EventDescription"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Location</label>
                    <input type="text" asp-for="EventLocation" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="EventLocation"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input type="date" asp-for="EventDate" class="form-control custom-input" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                    <span class="text-danger" asp-validation-for="EventDate"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ticket Prize</label>
                    <input type="number" asp-for="TicketPrice" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="TicketPrice"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Time</label>
                    <input type="time" asp-for="EventTime" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="EventTime"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Organizer</label>
                    <input type="text" asp-for="EventOrganizer" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="EventOrganizer"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Organizer Contact</label>
                    <input type="tel" asp-for="EventOrganizerContact" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="EventOrganizerContact"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Seats</label>
                    <input type="number" asp-for="TotalSeats" class="form-control custom-input">
                    <span class="text-danger" asp-validation-for="TotalSeats"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Booking Available?</label>
                    <select asp-for="IsBookingAvailable" class="form-control custom-input">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn custom-btn px-5">Submit</button>
        </div>
    </form>
</div>

<style>
    .custom-form {
        border-radius: 20px;
        padding: 30px;
        background: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .custom-input {
        border-radius: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        transition: border-color 0.3s ease-in-out;
    }

        .custom-input:focus {
            border-color: #ff6f61;
            box-shadow: 0 0 5px rgba(255, 111, 97, 0.5);
        }

    .custom-btn {
        background-color: #ff6f61;
        color: white;
        font-size: 1.2rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        border: none;
    }

        .custom-btn:hover {
            background-color: #ff4a3d;
        }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
