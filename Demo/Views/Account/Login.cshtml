@model Demo.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center my-5">
    <div class="col-md-4">
        <div class="card shadow-lg border-0" style="border-radius: 20px;">
            <div class="card-body p-4">
                <h3 class="text-center mb-4" style="color: #ff6f61;">Login to Book Tickets</h3>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsernameOrEmail" class="control-label">Username or Email</label>
                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="Enter your username or email" style="border-radius: 10px;" />
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="border-radius: 10px;" />
                        <br />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Login" class="btn btn-primary custom-btn" />
                    </div>
                </form>
                <p class="text-center mt-3">
                    Don't have an account?<a class="text-decoration-none custom-link" asp-action="Registration">Register Now</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom Theme Styles */
    .custom-btn {
        background-color: #ff6f61;
        border: none;
        padding: 10px 30px;
        font-size: 1.2rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #ff4a3d;
        }

    .custom-link {
        color: #ff6f61;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .custom-link:hover {
            color: #ff4a3d;
        }
</style>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



